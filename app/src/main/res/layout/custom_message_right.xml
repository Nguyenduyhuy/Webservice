<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">



    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMessName"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imgMessAvatar"
        android:padding="15dp"
        android:text="Message Text"
        android:textColor="#ffff"
        android:background="@drawable/custom_text_bg"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/imgMessAvatar" />

    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/txtMessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imgMessAvatar"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imgMessAvatar" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtMessage"
        android:layout_below="@+id/txtMessage"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/imgMessAvatar"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/txtMessage"
        android:layout_toRightOf="@+id/imgMessAvatar" />


</RelativeLayout>